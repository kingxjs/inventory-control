{
  "$schema": "https://tauri.app/schema.json",
  "productName": "Inventory Control",
  "version": "0.1.2",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build/client"
  },
  "identifier": "com.inventory.control",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "出入库登记系统",
        "width": 1280,
        "height": 800,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "shortDescription": "出入库登记系统",
    "longDescription": "迷糊虫出品的库存管理桌面应用，提供出入库登记、库存查询和报表功能，界面语言为中文。",
    "category": "public.app-category.business",
    "externalBin": [],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": null
    }
  }
}