{
  "$schema": "https://tauri.app/schema.json",
  "productName": "出入库登记系统",
  "version": "0.1.12",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build/client"
  },
  "identifier": "com.inventory.control",
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "出入库登记系统",
        "width": 1280,
        "height": 800,
        "center": true,
        "visible": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png",
      "icons/icon.svg"
    ],
    "publisher": "迷糊虫",
    "copyright": "Copyright © 2026 迷糊虫. All rights reserved.",
    "shortDescription": "出入库登记系统",
    "longDescription": "迷糊虫出品的库存管理桌面应用，提供出入库登记、库存查询和报表功能，界面语言为中文。",
    "category": "Business",
    "externalBin": [],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": [
          "zh-CN"
        ]
      },
      "nsis": {
        "languages": [
          "SimpChinese"
        ],
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "perMachine",
        "compression": "lzma"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": null,
      "signingIdentity": null,
      "entitlements": null
    }
  }
}
