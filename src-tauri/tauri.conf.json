{
  "$schema": "https://tauri.app/schema.json",
  "productName": "Inventory Control",
  "version": "0.1.1",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../build/client"
  },
  "identifier": "com.inventory.control",
  "app": {
    "windows": [
      {
        "title": "出入库登记系统",
        "width": 1280,
        "height": 800
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/icon.png"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "wix": null,
      "nsis": null
    }
  }
}